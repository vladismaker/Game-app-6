<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificationFragment"
    android:background="@drawable/background_pravila3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Правила!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Удвой или проиграй!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="- Выбери одну из четырех карт"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="- Если ценность твоей карточки выше главной, удвой выйгрыш, ниже - проиграй все!"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="- Самая дешевая карточка - 2, ценная - 15"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="- Изменить ставку можно в начале игры или нажав на СТАВКА на верхней панели"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Удачи!"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingHorizontal="20dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <Button
            android:id="@+id/buttonSpecification"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="ок"
            android:layout_gravity="center"
            />
    </LinearLayout>

</FrameLayout>